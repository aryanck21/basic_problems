#include<iostream>
using namespace std;
int main ()
{
	int t,l,n,i,j,k;
	cin>>t;
	for(l=1;l<=t;l++)
	{
		cin>>n;
		k=(2*n)-2;
		for(i=1;i<=n;i++)                                             
		{
			for(j=1;j<=i;j++)
			{
				cout<<"*";                            
      }
			for(j=k;j>=1;j--)
			{
				cout<<"#";
			}
			k=k-2;
			for(j=1;j<=i;j++)
			{
				cout<<"*";
			}
		cout<<endl;
		}
		cout<<endl;
	}	
	return 0;
}
